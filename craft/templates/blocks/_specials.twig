{% set backgroundImage = block.backgroundImage|length == 0 ? "" : " background: url(" ~  block.backgroundImage|first.url ~ ") #f9f9f9 no-repeat;   background-size: 60%;" %}

<section class="specials" style="{{ backgroundImage }}">
  <div class="container">
    {% if block.heading %}
      <header>
        <h2>{{ block.heading }}</h2>
      </header>
    {% endif %}
    {% if block.body %}
        {{ block.body }}
    {% endif %}
    {% if block.specials|length %}
      <div class="grid">
        {% for child in block.specials %}
          <div class="col {% if block.specials|length == 3 %}col-1-of-3 col--m-1-of-2{% else %}
             col-1-of-2 col--m-1-of-2{% endif %}">
            <div class="box">
              <div class="box-content">
                <b>{{ child.title }}</b>
                {{ child.body }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </div>
</section>