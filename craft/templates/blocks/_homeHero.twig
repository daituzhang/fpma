  {% if block.slides|length %}
    <div class="hero-slides-container">
      <span class="hero-arrow arrow-left">left</span>
      {% for slide in block.slides %}
        {% set backgroundImage = slide.backgroundImage|length == 0 ? "" : " background: url(" ~  block.backgroundImage|first.url ~ ") no-repeat;   " %}
        <div class="hero-slide{% if loop.first  %} active{% endif %}" style="{{ backgroundImage }}">
          <h2>{{ slide.title }}</h2>
          {{ slide.body }}
        </div>
      {% endfor %}
      <span class="hero-arrow arrow-right">right</span>
    </div>
  {% endif %}
</section>